rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection
    match /users/{userId} {
      // Kullanıcı kendi verisini okuyabilir/yazabilir
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // VEYA: Tüm kullanıcılar okuyabilir (admin panel için)
      // Güvenlik için sadece temel bilgiler okunabilir
      allow read: if true;
      
      // Interactions subcollection
      match /interactions/{interactionId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Feedback collection - kullanıcılar sadece yazabilir
    match /feedback/{feedbackId} {
      allow create: if request.auth != null;
      allow read: if true; // Admin panel okuyabilsin
      allow update, delete: if false;
    }
    
    // Analytics collection
    match /analytics/{docId} {
      allow create: if request.auth != null;
      allow read: if true; // Admin panel okuyabilsin
      allow update, delete: if false;
    }

    // Activity logs collection — uygulama yazar, admin panel okur
    match /activity_logs/{logId} {
      allow create: if request.auth != null;
      allow read: if true;
      allow update, delete: if false;
    }
  }
}
