rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ============ ADMIN FONKSİYONU ============
    function isAdmin() {
      return request.auth != null && request.auth.uid == '35K8zAyPooPKh1viMFjfSHHzofw2';
    }

    // ============ KULLANICI VERİLERİ ============
    match /users/{userId} {
      // Admin tüm kullanıcıları okuyabilir, kullanıcı sadece kendisini
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());

      // Yazma: Sadece kendi verisini, veri boyutu sınırıyla
      allow create: if request.auth != null && request.auth.uid == userId
                    && request.resource.data.keys().size() < 100;
      allow update: if request.auth != null && request.auth.uid == userId
                    && request.resource.data.keys().size() < 100;
      allow delete: if request.auth != null && request.auth.uid == userId;

      // Interactions subcollection
      match /interactions/{interactionId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow create: if request.auth != null && request.auth.uid == userId
                      && request.resource.data.keys().hasAll(['interactionType', 'timestamp']);
        allow update, delete: if false; // Etkileşim geçmişi değiştirilemez
      }

      // Tarot readings subcollection
      match /tarotReadings/{readingId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow create: if request.auth != null && request.auth.uid == userId;
        allow update, delete: if false; // Tarot okumaları değiştirilemez
      }

      // Daily horoscope cache subcollection
      match /dailyCache/{cacheId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow create, update: if request.auth != null && request.auth.uid == userId;
        allow delete: if false;
      }
    }

    // ============ GERİ BİLDİRİM ============
    match /feedback/{feedbackId} {
      allow create: if request.auth != null
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.keys().hasAll(['userId', 'rating', 'timestamp']);
      allow read: if isAdmin();
      allow update, delete: if false;
    }

    // ============ ANALİTİK ============
    match /analytics/{docId} {
      allow create: if request.auth != null;
      allow read: if isAdmin();
      allow update, delete: if false;
    }

    // ============ AKTİVİTE LOGLARI ============
    match /activity_logs/{logId} {
      allow create: if request.auth != null;
      allow read: if isAdmin();
      allow update, delete: if false;
    }

    // ============ GÜNLÜK BURÇ YORUMLARI ============
    // Web ve mobil uygulama burç yorumlarını okuyabilir
    match /daily_horoscopes/{horoscopeId} {
      allow read: if true; // Herkes okuyabilir (ücretsiz içerik)
      allow create: if request.auth != null; // Sadece giriş yapmış kullanıcılar yorum oluşturabilir
      allow update, delete: if isAdmin();
    }

    // ============ iOS BEKLEMEListesi ============
    match /ios_waitlist/{docId} {
      allow create: if true; // Herkes e-posta bırakabilir
      allow read: if isAdmin();
      allow update, delete: if false;
    }

    // ============ UYGULAMA AYARLARI ============
    match /app_config/{configId} {
      allow read: if request.auth != null; // Sadece giriş yapmış kullanıcılar
      allow write: if isAdmin();
    }

    // ============ DİĞER TÜM DOKÜMANLAR ============
    // Varsayılan: Hiçbir şeye izin verme
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
