rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection - sadece kendi verisine erişim
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Interactions subcollection
      match /interactions/{interactionId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Tarot readings subcollection
      match /tarotReadings/{readingId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Feedback collection - sadece authenticated kullanıcılar yazabilir
    match /feedback/{feedbackId} {
      allow create: if request.auth != null;
      allow read, update, delete: if false;
    }

    // Analytics collection - sadece authenticated kullanıcılar yazabilir
    match /analytics/{docId} {
      allow create: if request.auth != null;
      allow read, update, delete: if false;
    }

    // Activity logs collection - sadece authenticated kullanıcılar yazabilir
    match /activity_logs/{logId} {
      allow create: if request.auth != null;
      allow read, update, delete: if false;
    }
  }
}
